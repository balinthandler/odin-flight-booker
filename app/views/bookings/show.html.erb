<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        <div class="box">
          <div class="as">
            <div class="title is-3">
            Booking details
            </div>
              <div class="title is-2">
                <%= @booking.flight.from_airport.code%>
                <span><i class="fas fa-angle-double-right"></i></span>
                <%= @booking.flight.to_airport.code %>
              </div>
              <div class="title is-6">
                <span><i class="far fa-calendar-alt"></i></span> <%= @booking.flight.departure_date %>
              </div>
                <p>
                  <span><i class="fas fa-plane-departure"></i></span>
                  Departure: <%= @booking.flight.departure_time.strftime("%H\:%M")%>
                </p>
                <p>
                  <span><i class="far fa-clock"></i></span>
                  Duration: <%= Time.at(@booking.flight.flight_duration).strftime("%H\:%M")%>
                </p>
                <p>
                  <span><i class="fas fa-plane-arrival"></i></span>
                  Arrival: <%= (@booking.flight.departure_time + @booking.flight.flight_duration).strftime("%H\:%M") %>
                </p>
                <br />
              <div class="block">
                <% @booking.passengers.each_with_index do |passenger, index| %>
                  <p class="title is-6">
                    <%= "Passenger #{index + 1}" %>
                  </p>
                  <p>
                    Name: <%= passenger.name %>
                  </p>
                  <p>
                    E-mail: <%= passenger.email %>
                  </p>
                  <br />
                <% end %>
              </div>
      </div>
    </div>
  </div>
</div>